<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:focusable="false"
    android:layoutMode="opticalBounds"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/drinkk"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/food"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/food"
        android:background="@drawable/drink" />
    <Button
        android:id="@+id/btkeluar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/food"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/clo" />

    <Button
        android:id="@+id/food"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/fo" />

</RelativeLayout>